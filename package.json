{
  "name": "f1-web",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "bootstrap": "pnpm install && pnpm --filter f1-main install && pnpm --filter race-micro install && pnpm --filter team-micro install && pnpm --filter car-micro install && pnpm --filter driver-micro install",
    "clean": "rimraf node_modules **/*/node_modules",
    "dev": "pnpm -r --parallel dev",
    "dev:main": "pnpm --filter f1-main dev",
    "dev:race": "pnpm --filter race-micro dev",
    "dev:team": "pnpm --filter team-micro dev",
    "dev:car": "pnpm --filter car-micro dev",
    "dev:driver": "pnpm --filter driver-micro dev",
    "build": "pnpm -r --parallel build",
    "build:main": "pnpm --filter f1-main build",
    "build:race": "pnpm --filter race-micro build",
    "build:team": "pnpm --filter team-micro build",
    "build:car": "pnpm --filter car-micro build",
    "build:driver": "pnpm --filter driver-micro build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
  }
}
